<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Project>
    <Cloud>
        <InitialVMs>1</InitialVMs>
        <minVMCount>1</minVMCount>
        <maxVMCount>3</maxVMCount>
        <Provider name="BSC1">
            <LimitOfVMs>2</LimitOfVMs>
            <Property>
                <Name>auth</Name>
                <Value>x509</Value>
            </Property>
            <Property>
                <Name>ca-path</Name>
                <Value>/etc/grid-security/certificates</Value>
            </Property>
            <Property>
                <Name>user-cred</Name>
                <Value>jenkins-test.pem</Value>
            </Property>
            <Property>
                <Name>password</Name>
                <Value>jenkins-test2014</Value>
            </Property>
            <Property>
                <Name>owner</Name>
                <Value>jenkins-test</Value>
            </Property>
            <Property>
                <Name>jobname</Name>
                <Value>test-multiProvider1</Value>
            </Property>
         
             <!-- Optional connector parameters -->
            <Property>
                <Name>max-vm-creation-time</Name>
                <Value>10</Value> <!-- Minutes -->
            </Property>
            <Property>
                <Name>max-connection-errors</Name>
                <Value>36</Value>
            </Property>
            <Property>
                <Name>vm-user</Name>
                <Value>user</Value>
            </Property>

            <ImageList>
                <Image name="uuid_XX_compss_testing_XX">
                    <InstallDir>remote_COMPSs</InstallDir>
                    <WorkingDir>/home/user/IT/</WorkingDir>
                    <User>user</User>
                    <Package>
                        <Source>Simple.tar.gz</Source>
                        <Target>/home/user/apps</Target>
                    </Package>
                </Image>
            </ImageList>
            <InstanceTypes>
                <Resource name="small"/>
            </InstanceTypes>
        </Provider>
        
        <Provider name="BSC2">
            <LimitOfVMs>3</LimitOfVMs>
            <Property>
                <Name>auth</Name>
                <Value>x509</Value>
            </Property>
            <Property>
                <Name>ca-path</Name>
                <Value>/etc/grid-security/certificates</Value>
            </Property>
            <Property>
                <Name>user-cred</Name>
                <Value>jenkins-test.pem</Value>
            </Property>
            <Property>
                <Name>password</Name>
                <Value>jenkins-test2014</Value>
            </Property>
            <Property>
                <Name>owner</Name>
                <Value>jenkins-test</Value>
            </Property>
            <Property>
                <Name>jobname</Name>
                <Value>test-multiProvider2</Value>
            </Property>
         
             <!-- Optional connector parameters -->
            <Property>
                <Name>max-vm-creation-time</Name>
                <Value>10</Value> <!-- Minutes -->
            </Property>
            <Property>
                <Name>max-connection-errors</Name>
                <Value>36</Value>
            </Property>
            <Property>
                <Name>vm-user</Name>
                <Value>user</Value>
            </Property>

            <ImageList>
                <Image name="uuid_XX_compss_testing_XX">
                    <InstallDir>remote_COMPSs</InstallDir>
                    <WorkingDir>/home/user/IT/</WorkingDir>
                    <User>user</User>
                    <Package>
                        <Source>Simple.tar.gz</Source>
                        <Target>/home/user/apps</Target>
                    </Package>
                </Image>
            </ImageList>
            <InstanceTypes>
                <Resource name="medium"/>
                <Resource name="large"/>
            </InstanceTypes>
        </Provider>
    </Cloud>
</Project>

