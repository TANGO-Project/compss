        <Storage>
            <Size>10.0</Size>
        </Storage>
    </SharedDisk>
    
    <ComputeNode Name="localhost">
        <Processor Name="MainProcessor">
            <ComputingUnits>4</ComputingUnits>
            <Architecture>IA32</Architecture>
        </Processor>
        <Memory>
        	<Size>8.0</Size>
        </Memory>
        <Adaptors>
            <Adaptor Name="integratedtoolkit.nio.master.NIOAdaptor">
