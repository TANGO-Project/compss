<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Project>
    <MasterNode/>
    
    <ComputeNode Name="COMPSsWorker01">
        <InstallDir>/opt/COMPSs/Runtime/</InstallDir>
        <WorkingDir>/tmp/COMPSsWorker01/</WorkingDir>
    </ComputeNode>
    
    <ComputeNode Name="COMPSsWorker02">
        <InstallDir>/opt/COMPSs/Runtime/</InstallDir>
        <WorkingDir>/tmp/COMPSsWorker02/</WorkingDir>
    </ComputeNode>
    
    <ComputeNode Name="COMPSsWorker03">
        <InstallDir>/opt/COMPSs/Runtime/</InstallDir>
        <WorkingDir>/tmp/COMPSsWorker03/</WorkingDir>
    </ComputeNode>
    
    <ComputeNode Name="COMPSsWorker04">
        <InstallDir>/opt/COMPSs/Runtime/</InstallDir>
        <WorkingDir>/tmp/COMPSsWorker04/</WorkingDir>
    </ComputeNode>
    
    <Service wsdl="http://localhost:28019/groupService?wsdl">
        <LimitOfTasks>2</LimitOfTasks>
    </Service>
    
    <Cloud>
        <InitialVMs>0</InitialVMs>
        <MinimumVMs>0</MinimumVMs>
        <MaximumVMs>3</MaximumVMs>    
        
        <CloudProvider Name="BSC">
            <LimitOfVMs>3</LimitOfVMs>
            <Properties>
                <Property>
	                <Name>auth</Name>
	                <Value>x509</Value>
	            </Property>
	            <Property>
	                <Name>ca-path</Name>
	                <Value>/etc/grid-security/certificates</Value>
	            </Property>
	            <Property>
	                <Name>user-cred</Name>
	                <Value>jenkins-test.pem</Value>
	            </Property>
	            <Property>
	                <Name>password</Name>
	                <Value>jenkins-test2014</Value>
	            </Property>
	            <Property>
	                <Name>owner</Name>
	                <Value>jenkins-test</Value>
	            </Property>
	            <Property>
	                <Name>jobname</Name>
	                <Value>test-constraints</Value>
	            </Property>
	    
	             <!-- Optional connector parameters -->
	            <Property>
	                <Name>max-vm-creation-time</Name>
					<Value>10</Value> <!-- Minutes -->
	            </Property>
	            <Property>
	                <Name>max-connection-errors</Name>
	                <Value>36</Value>
	            </Property>
	            <Property>
	                <Name>vm-user</Name>
	                <Value>user</Value>
	            </Property>
            </Properties>
            <Images>
                <Image Name="uuid_test_XX_unstable_XX">
                    <InstallDir>/opt/COMPSs/</InstallDir>
                    <WorkingDir>/tmp/Worker/</WorkingDir>
                    <User>user</User>
                    <Package>
                        <Source>constraintsTest.tar.gz</Source>
                        <Target>/home/user/apps</Target>
                        <IncludedSoftware>
                        	<Application>Java</Application>
                        	<Application>constraintsTest</Application>
                        </IncludedSoftware>
                    </Package>
                </Image>
            </Images>
            <InstanceTypes>
                <InstanceType Name="small"/>
                <InstanceType Name="medium"/>
            </InstanceTypes>
        </CloudProvider>
    </Cloud>

    <ComputeNode Name="COMPSsWorker05">
        <InstallDir>/opt/COMPSs/Runtime/</InstallDir>
        <WorkingDir>/tmp/COMPSsWorker05/</WorkingDir>
    </ComputeNode>

</Project>
